{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/content/question_index.schema.json",
  "title": "QuestionIndex",
  "type": "object",
  "required": ["schema_version", "generated_at", "questions"],
  "properties": {
    "schema_version": { "type": "string" },
    "generated_at": { "type": "string" },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["question_id", "exam_id", "course", "section", "type", "question_path"],
        "properties": {
          "question_id": { "type": "string" },
          "exam_id": { "type": "string" },
          "course": { "type": ["integer", "string"] },
          "section": { "type": "string" },
          "order": { "type": ["integer", "null"] },
          "type": { "type": "string" },
          "pattern_id": { "type": ["string", "null"] },
          "tags": { "type": "array", "items": { "type": "string" } },
          "difficulty_level": { "type": ["integer", "null"] },
          "answer_ref": { "type": "object", "additionalProperties": true },
          "solution_ref": { "type": ["string", "null"] },
          "question_path": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
