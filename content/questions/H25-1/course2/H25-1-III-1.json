    "steps": [
      { "idx": 1, "description": "楕円条件を三角関数でパラメータ化。", "math": "x=\\sqrt2\\cos\\theta,\\ y=2\\sin\\theta\\ (0\\le\\theta\\le\\pi/2)" },
      { "idx": 2, "description": "P を θ で表す。", "math": "P=2\\cos^2\\theta+2\\sqrt2\\sin\\theta\\cos\\theta+4\\sin^2\\theta=3-\\cos2\\theta+\\sqrt2\\sin2\\theta" },
      { "idx": 3, "description": "合成して最大化。", "math": "3-\\cos2\\theta+\\sqrt2\\sin2\\theta=\\sqrt3\\sin(2\\theta-\\alpha)+3" },
      { "idx": 4, "description": "係数比較で α を決定。", "math": "\\sqrt3\\cos\\alpha=\\sqrt2,\\ \\sqrt3\\sin\\alpha=1" },
      { "idx": 5, "description": "最大値は振幅+定数。", "math": "P_{\\max}=\\sqrt3+3" },
