      "is_divisibility": false,
      "has_parameter_elimination": true,
      "has_case_split": false,
      "has_integer_constraint": false,
      "algebraic_complexity": 2
    }
  },
  "solution": {
    "outline": [
      "等比和と交代和をそれぞれ公式化して比を取る",
      "公比を決めた後，初項を求める",
      "比の形から a1/ak を等比で処理して交代和を計算"
    ],
    "steps": [
      {
        "idx": 1,
        "description": "S10 と交代和を等比和で表す",
        "math": "S10=a\\frac{1-r^{10}}{1-r}=93,\\ T=a\\frac{1-r^{10}}{1+r}=31"
      },
      {
        "idx": 2,
        "description": "比を取って r を解く",
        "math": "\\frac{93}{31}=\\frac{1+r}{1-r}\\Rightarrow r=\\frac12"
      },
      {
        "idx": 3,
        "description": "r を代入して a を求める",
        "math": "31=a\\frac{1-(1/2)^{10}}{1+1/2}=a\\frac{1023}{1536}\\Rightarrow a=\\frac{512}{11}"
      },
      {
        "idx": 4,
        "description": "a1/ak=1/r^{k-1} を用いて交代和を計算",
        "math": "1-2+4-\\cdots-512=\\frac{1-(-2)^{10}}{1+2}=-341"
      }
    ],
    "symbolic_steps": []
